generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(user)
  createdAt    DateTime @default(now())

  @@map("users")
}

model Client {
  id        String    @id @default(uuid())
  name      String
  company   String?
  email     String?
  phone     String?
  notes     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]

  @@map("clients")
}

model Project {
  id          String            @id @default(uuid())
  clientId    String
  name        String
  description String?
  status      ProjectStatus     @default(Lead)
  dueDate     DateTime?
  notes       String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  links       DeliverableLink[]
  client      Client            @relation(fields: [clientId], references: [id], onDelete: Cascade)
  tasks       Task[]

  @@map("projects")
}

model Task {
  id        String   @id @default(uuid())
  projectId String
  title     String
  done      Boolean  @default(false)
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

model DeliverableLink {
  id        String   @id @default(uuid())
  projectId String
  label     String?
  url       String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("deliverable_links")
}

enum Role {
  admin
  user
}

enum ProjectStatus {
  Lead
  Cotizacion
  EnProduccion
  Entregado
}

model Survey {
  id                 String   @id @default(uuid())
  name               String?
  email              String?
  satisfactionRating Int      // 1-5
  easeOfUseRating    Int      // 1-5
  wouldRecommend     Boolean
  comments           String?
  createdAt          DateTime @default(now())

  @@map("surveys")
}
